<%- include('./css')%>
    <body>
        <%- include('./header')%>
            <div class="container my-3">
                <div class="row justify-content-center">
                    <div class="col-2 shadow-box rounded-lg p-0">
                        <% listBigCate.forEach((v)=> {%>
                            <form action="<%=ip%>product" class="m-0" method="post"
                                enctype="application/x-www-form-urlencoded">
                                <input type="hidden" value="<%=v.idBigCategory%>" name="idBigCategory">
                                <input type="hidden" value="<%=crt%>" name="v">
                                <input type="submit" class="fw-bold col-12  border border-light" value="<%=v.name%>">
                            </form>
                            <%})%>
                    </div>
                    <div class="col-6 my-2 p-0 mx-3 shadow-box">
                        <img class="small-image w-100" src="<%=ip%>static/banner/chao-he-loa-sony-x-series-slide.png"
                            height="auto" width="100%" alt="" srcset="" />
                    </div>
                    <div class="col-3">
                        <div class="my-2 shadow-box col-10">
                            <img class="small-image" src="<%=ip%>static/banner/m14-right-new00978.png" height="auto"
                                width="100%" alt="" srcset="" />
                        </div>
                        <div class="my-2 shadow-box col-10">
                            <img class="small-image" src="<%=ip%>static/banner/msi gaming right banner.jpg"
                                height="auto" width="100%" alt="" srcset="" />
                        </div>
                        <div class="my-2 shadow-box col-10">
                            <img class="small-image" src="<%=ip%>static/banner/right-ip14-pro-max-th66666.png"
                                height="auto" width="100%" alt="" srcset="" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <% for (let i=0; i < c.length; i++) { const element=c[i];%>
                    <div class="row justify-content-center ">
                        <h1 class="col-12 my-3 bg-light p-3 rounded">
                            <%=listBigCate[i].name%>
                        </h1>
                    </div>
                    <div class="row justify-content-start">
                        <%if (element !=undefined) { for (let j=0; j < element.length; j++) { const e=element[j];%>
                            <a href="<%ip%>product/<%=e.idProduct%>" style="text-decoration: none;"
                                class="product bg-light col-2 px-2 py-4">
                                <div class="container">
                                    <div class="row justify-content-center">
                                        <img class="col-12" src="<%=ip%>static/imageProduct/<%=e.image%>" alt="" />
                                    </div>
                                </div>
                                <div class="product-name">
                                    <%=e.namePro%>
                                </div>
                                <div class="product-price">
                                    <%=e.Price%>
                                </div>
                            </a>

                            <%} } }%>
                    </div>
            </div>
            <%- include('../page/footer.ejs')%>
    </body>
    
    <script>
        function d() {
            alert('dsa')
            var alertList = document.querySelectorAll('.alert')
            alertList.forEach(function (alert) {
                new bootstrap.Alert(alert)
            })
        }
    </script>

    </html>