<%- include('../../css.ejs')%>
    <body>
        <%- include('../../header.ejs')%>
            <div class="container">
                <div class="row justify-content-center">
                    <form action="<%ip%>account" class="col-lg-6 my-5" method="post"
                        enctype="application/x-www-form-urlencoded">
                        <h1 class="text-center my-5">
                            Đăng nhập
                        </h1>
                        <input type="hidden" name="crt" value="<%=crt%>">
                        <div class="form-group my-2">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" name="account" required class="form-control" value="huy91027@gmail.com"
                                aria-describedby="emailHelp" placeholder="Enter email">
                        </div>
                        <div class="form-group my-2">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" required class="form-control" name="password" value="123456789"
                                placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-primary">Đăng nhập</button>
                        <a href="<%=ip%>account/signup" class="btn btn-primary">Đăng ký</a>
                    </form>
                </div>
            </div>
            <%- include('../../footer.ejs')%>
    </body>

    </html>
    <script type="text/javascript" src="<%=ip%>static/js/action.js"></script>