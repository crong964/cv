<html>
<%- include('../../css')%>

    <body>
        <%- include('../../header')%>
            <div class="container p-0" style="min-height: 700px;">
                <div class="row p-0">
                    <div class="col-2 p-0 pt-5">
                        <%- include('../../infor.ejs')%>
                    </div>
                    <div class="col-10 p-0">
                        <div class="container">
                            <div class="bg-light my-3">
                                danh sách đơn hàng
                            </div>
                            <div class="container bg-light my-3">
                                <div class="row">
                                    <a class="col-2 btn" href="<%=ip%>orderbill/">
                                        tất cả
                                    </a>
                                    <% ship.forEach((v,i)=>{%>
                                        <a class="col-2 btn" href="<%=ip%>orderbill/?va=<%=i%>&type=ship">
                                            <%= v%>
                                        </a>
                                        <%})%>
                                            <% pay.forEach((v,i)=>{%>
                                                <a class="col-2 btn" href="<%=ip%>orderbill/?va=<%=i%>&type=pay">
                                                    <%= v%>
                                                </a>
                                                <%})%>
                                </div>
                            </div>
                            <div class="bg-light rounded" style="min-height: 500px;">
                                <table class="table ">
                                    <thead>
                                        <tr>
                                            <th scope="col">mã đơn hàng</th>
                                            <th scope="col">ngày tạo</th>
                                            <th scope="col">giao hàng</th>
                                            <th scope="col">thành toán</th>
                                            <th scope="col">tổng tiền</th>
                                            <th scope="col">chi tiết</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%list.forEach((v)=> {%>
                                            <tr>
                                                <td class="text-center">
                                                    <%= v.id%>
                                                </td>
                                                <td>
                                                    <%=v.createday%>
                                                </td>
                                                <td class=" p-2">
                                                    <div class="S-<%=v.ship%>">
                                                        <%=v.shipS%>
                                                    </div>
                                                </td>
                                                <td class=" p-2">
                                                    <div class="S-<%=v.pay%>">
                                                        <%=v.payS%>
                                                    </div>
                                                </td>
                                                <td class="M">
                                                    <%= v.totolmoney%>
                                                </td>
                                                <td>
                                                    <a href="<%=ip%>orderbill/bill?id=<%=v.id%>" class="btn btn-primary">
                                                        Xem chi tiết
                                                    </a>
                                                </td>
                                            </tr>
                                            <%})%>

                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>

                </div>
            </div>

            <%- include('../../footer.ejs')%>
    </body>
    <script type="text/javascript" src="<%=ip%>static/js/action.js"></script>

</html>