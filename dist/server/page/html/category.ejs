<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <title>admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="<%= ip %>static/css/admin.css" />
</head>

<body>
  <%- include('header'); %>
    <div class="row w-100">
      <%- include('navi'); %>
        <div class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
          <div class="d-flex mt-3">
            <div class="flex mr-2">
              <h1>Loại sản phẩm 1</h1>
            </div>
          </div>
          <div class="table-responsive" id="sampleTable">
            <table class="table table-hover table-bordered">
              <tr>
                <td>Mã</td>
                <td>Tên</td>
                <td>Tháo tác</td>
              </tr>
              <% for (let i=0; i < list1.length; i++) { %>
                <% const element=list1[i];%>
                  <tr>
                    <form action="<%=ip%>admin/category/Edit" enctype="application/x-www-form-urlencoded"
                      onsubmit="return kt()" method="post">
                      <td>
                        <%=element.idBigCategory%>
                      </td>
                      <td>
                        <input type="text" hidden name="idBigCategory" value="<%=element.idBigCategory%>" />
                        <input type="text" name="name" value="<%=element.name%>" />
                      </td>
                      <td><button class="btn btn-primary">sửa</button>
                    </form>
                    <form action="<%=ip%>admin/category/Delete" class="d-inline-block"
                      enctype="application/x-www-form-urlencoded" onsubmit="return kt()" method="post">
                      <input type="text" hidden name="id" value="<%=element.idBigCategory%>" />
                      <button class="btn btn-primary">xóa</button>
                    </form>
                    </td>
                  </tr>
                  <% } %>
                    <tr>
                      <form action="<%=ip%>admin/category/Add" onsubmit="return kt()" method="post">
                        <td>Thêm loại mới</td>
                        <td><input name="name" required type="text" /></td>
                        <td><button class="btn btn-primary">thêm</button></td>
                      </form>
                    </tr>
            </table>
          </div>

          <div class="d-flex mt-3">
            <div class="flex mr-2">
              <h1>Loại sản phẩm 2</h1>
            </div>
          </div>
          <div class="table-responsive" id="sampleTable">
            <table class="table bg-light table-hover table-bordered">
              <tr>
                <td>Mã</td>
                <td>Tên</td>
                <td>Tháo tác</td>
              </tr>
              <% for (let i=0; i < list2.length; i++) { %>
                <% const element=list2[i];%>
                  <tr>
                    <form action="<%=ip%>admin/category" onsubmit="return kt()" method="post">
                      <td>
                        <%=element.idSmallCategory%>
                      </td>
                      <td>
                        <input type="text" hidden name="idSmallCategory" value="<%=element.idSmallCategory%>" />
                        <input type="text" name="nameSmallCategory" value="<%=element.nameSmallCategory%>" />
                      </td>
                      <td><button class="btn btn-primary">sửa</button></td>
                    </form>
                  </tr>
                  <% } %>
                    <tr>
                      <form action="<%=ip%>admin/category" onsubmit="return kt()" method="post">
                        <td>Thêm loại mới</td>
                        <td><input type="text" /></td>
                        <td><button class="btn btn-primary">thêm</button></td>
                      </form>
                    </tr>
            </table>
          </div>
        </div>
    </div>
</body>
<script defer type="text/javascript" src="<%=ip%>static/js/action.js"></script>
<script>
  function kt() {
    return confirm("bạn muốn thực hiện")
  }
</script>

</html>