<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <title>admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="<%=ip%>static/css/admin.css" />
</head>

<body>
  <%- include('../header'); %>
    <div class="row">
      <%- include('../navi'); %>
        <div class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
          <div class="d-flex mt-3">
            <div class="flex mr-2">
              <a class="btn btn-primary" href="<%=ip%>admin" title="Thêm">
                quay lại</a>
            </div>
          </div>
          <h6 class="text-center">Thêm sản phẩm mới</h6>
          <form method="post" id="form" action="<%=ip%>admin/product/productadd" enctype="multipart/form-data">
            <div class="rounded shadow-lg p-3 mb-5 bg-white">
              <div class="form-group mt-3">
                <label for="namePro">Tên sản phẩm</label>
                <input type="text" name="namePro" required class="form-control" id="namePro"
                  placeholder="điền tên sản phẩm" />
              </div>
              <div class="form-group mt-3">
                <label for="Price">giá sản phẩm bán</label>
                <input type="number" name="Price" required class="form-control" id="Price" placeholder="" />
              </div>
              <div class="form-group mt-3">
                <label for="ImportPrice">giá sản phẩm nhập</label>
                <input type="number" name="ImportPrice" required class="form-control" id="ImportPrice" placeholder="" />
              </div>
              <div class="form-group mt-3">
                <label for="idBigCategory">phân loại lớn</label>
                <select class="form-control" name="idBigCategory" required id="idBigCategory">
                  <%for (let i=0; i < list[1].length; i++) { const element=list[1][i];%>
                    <option value="<%=element.idBigCategory%>">
                      <%=element.name%>
                    </option>
                    <%}%>
                </select>
              </div>
              <div class="form-group mt-3">
                <label for="idSmallCategory">phân loại nhỏ</label>
                <select class="form-control" name="idSmallCategory" required id="idSmallCategory">
                  <% for (let i=0; i < list[0].length; i++) { const element=list[0][i];%>
                    <option value="<%=element.idSmallCategory%>">
                      <%=element.nameSmallCategory%>
                    </option>
                    <%}%>
                </select>
              </div>
              <div class="form-group my-3">
                <label for="txtHinh">
                  <img src="<%=ip%>static\image\file.png" id="i" width="150" height="auto" alt="" srcset="" />
                </label>
                <input type="file" required name="image" id="txtHinh" hidden class="form-control-file" />
              </div>
            </div>
            <div class="rounded shadow-lg p-3 mb-5 bg-white bt">
              <h6 class="text-center">Các biến thể</h6>
              <div>
                <div class="form-group mt-3">
                  <label for="">tên biến thể 1</label>
                  <input type="text" value="nhom1" name="bt1" required class="form-control" id="" placeholder="" />
                </div>
                <div class="bt1">
                  <label for="">số biến thể 1</label>
                </div>
                <input type="button" class="btn btn-primary my-3" value="thêm" onclick="btmot()" />
              </div>
              <div>
                <div class="form-group mt-3">
                  <label for="">tên biến thể 2</label>
                  <input type="" value="nhom2" name="bt2" required class="form-control" id="" placeholder="" />
                </div>
                <div class="bt2">
                  <label for="">số biến thể 2</label>
                </div>
                <input type="button" class="btn btn-primary my-3" value="thêm" onclick="bthai()" />
              </div>
            </div>
            <div class="tablebt rounded shadow-lg p-3 mb-5 bg-white">
              <table class="table"></table>
            </div>
            <input type="submit" class="btn btn-primary" />
          </form>
        </div>
    </div>
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  var s = document.getElementById("txtHinh");
  s.addEventListener("change", () => {
    var file = new FileReader();
    file.onloadend = () => {
      var img = document.getElementById("i");
      if (file.result) {
        img.src = file.result + "";
      }
    };
    var f = s;
    if (f && f.files) {
      file.readAsDataURL(f.files[0]);
    }
  });
</script>
<script defer type="text/javascript" src="<%=ip%>static/js/procductadd.js"></script>

</html>