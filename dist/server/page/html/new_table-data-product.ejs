<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="<%=ip%>static/css/admin.css" />
</head>

<body>
    <%-include('header')%>
        <div class="row w-100">
            <%- include('navi')%>
                <div class="col-lg-10">
                    <div class="d-flex mt-3">
                        <div class="flex mr-2">
                            <a class="btn btn-primary" href="<%=ip%>admin/product/productadd" title="Thêm">
                                Tạo mới sản phẩm</a>
                        </div>
                    </div>
                    <div class="table-responsive" id="sampleTable">
                        <h2 class="text-center">
                            Danh sách các sản phẩm
                        </h2>
                        <table class="table table-hover table-bordered" id="sampleTable">
                            <tr>
                                <td>Mã sản phẩm</td>
                                <td>Tên sản phẩm</td>
                                <td>Ảnh sản phẩm</td>
                                <td>Giá nhập </td>
                                <td>Giá bán</td>
                                <td>Số lương</td>
                                <td>xem chi tiết</td>
                            </tr>
                            <%for (let i=0; i < list.length; i++) { const element=list[i];%>
                                <tr>
                                    <td>
                                        <%=element.idProduct%>
                                    </td>
                                    <td>
                                        <%=element.namePro%>
                                    </td>
                                    <td>
                                        <img width="100px" src="<%=ip%>static/imageProduct/<%=element.image%>" alt="">
                                    </td>
                                    <td class="p">
                                        <%=element.importPrices%>
                                    </td>
                                    <td class="p">
                                        <%=element.Price%>
                                    </td>
                                    <td>
                                        <%=element.amount%>
                                    </td>
                                    <td class="">
                                        <a class="btn btn-primary" href="<%=ip%>admin/childproduct/<%=element.idProduct%>">
                                            Xem chi tiết
                                        </a>
                                        <form action="<%=ip%>admin/product/delete" onsubmit="return ket()" method="post">
                                            <input type="text" name="id" hidden value="<%=element.idProduct%>">
                                            <input type="submit" value="xóa" class="btn btn-primary mt-3">
                                        </form>
                                        <a class="btn btn-primary mt-3"
                                            href="<%=ip%>admin/product/edit/<%=element.idProduct%>">sửa</a>
                                    </td>
                                </tr>
                                <%}%>
                        </table>
                    </div>
                </div>
        </div>
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

<script type="text/javascript" src="<%=ip%>static/js/action.js"></script>
<script defer type="text/javascript" src="<%=ip%>static/js/table-Pro.js"></script>
<script defer type="text/javascript" src="<%=ip%>static/js/table-childPro.js"></script>
<script defer>
    var p = document.querySelectorAll(".p")
    p.forEach((v) => {
        console.log(v);
        v.innerHTML = convertMoney(v.innerHTML.trim())
    })
    function ket() {
        confirm("bạn muốn thực hiện không")

    }
</script>

</html>