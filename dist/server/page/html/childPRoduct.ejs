<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="<%=ip%>static/css/admin.css" />
</head>

<body>
    <%-include('header')%>
        <div class="row w-100">
            <%- include('navi')%>
                <div class="col-lg-10">
                    <div class="d-flex mt-3">
                        <div class="flex mr-2">
                            <a class="btn btn-primary" href="<%=ip%>admin/product/productadd" title="Thêm">
                                Tạo mới sản phẩm</a>
                        </div>
                    </div>
                    <div>
                        <h2 class="text-center">
                            Danh sách các sản phẩm con
                        </h2>
                        <a href="<%=ip%>admin" class="btn btn-success my-3">
                            quay lại
                        </a>
                        <div class=" text-center text-black  text-3xl ">
                            Danh sách các sản phẩm
                        </div>
                        <table class="table table-hover table-bordered" id="sampleTable">
                            <thead>
                                <tr>
                                    <th>Mã sản phẩm</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Ảnh sản phẩm</th>
                                    <th>Giá nhập </th>
                                    <th>Giá bán</th>
                                    <th>Số lương</th>
                                    <th>thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%for(let i=0; i < list.length; i++) { const element=list[i];%>
                                    <form action="<%=ip%>" method="post">
                                        <tr class="text-base">
                                            <td>
                                                <%=element.idChildProduct%>
                                            </td>
                                            <td>
                                                <%=element.nameChildProduct%>
                                            </td>
                                            <td><img src="<%=ip%>static/imageProduct/<%=element.image%>" alt="" width="100px;"></td>
                                            <td class="p">
                                                <%=element.importPrice%>
                                            </td>
                                            <td class="p">
                                                <%=element.price%>
                                            </td>
                                            <td>
                                                <%=element.amount%>
                                            </td>
                                            <td>
                                                <div class="product btn btn-primary"
                                                    onclick='addCart("<%=element.idChildProduct%>")'>
                                                    Thêm hóa đơn
                                                </div>
                                            </td>
                                        </tr>
                                    </form>
                                    <%}%>
                            </tbody>
                    </div>
                </div>
        </div>
</body>

</html>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

<script type="text/javascript" src="<%=ip%>static/js/action.js"></script>
<script defer type="text/javascript" src="<%=ip%>static/js/table-Pro.js"></script>
<script defer type="text/javascript" src="<%=ip%>static/js/table-childPro.js"></script>
<script>
    var p = document.querySelectorAll(".p")
    p.forEach((v) => {
        console.log(v);
        v.innerHTML = convertMoney(v.innerHTML.trim())
    })
</script>